<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.androidandyuk.voiceover.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/anaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:scaleType="fitCenter"
                android:tag="ana"
                app:srcCompat="@drawable/ana" />

            <ImageView
                android:id="@+id/bastionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="bastion"
                app:srcCompat="@drawable/bastion" />

            <ImageView
                android:id="@+id/dvaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="dva"
                app:srcCompat="@drawable/dva" />

            <ImageView
                android:id="@+id/genjiView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="genji"
                app:srcCompat="@drawable/genji" />

            <ImageView
                android:id="@+id/hanzoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="hanzo"
                app:srcCompat="@drawable/hanzo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/viewJunkrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="junkrat"
                app:srcCompat="@drawable/junkrat" />

            <ImageView
                android:id="@+id/lucioView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="lucio"
                app:srcCompat="@drawable/lucio" />

            <ImageView
                android:id="@+id/mccreeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="mccree"
                app:srcCompat="@drawable/mccree" />

            <ImageView
                android:id="@+id/meiView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="mei"
                app:srcCompat="@drawable/mei" />

            <ImageView
                android:id="@+id/mercyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="mercy"
                app:srcCompat="@drawable/mercy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/orisaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="orisa"
                app:srcCompat="@drawable/orisa" />

            <ImageView
                android:id="@+id/pharahView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="pharah"
                app:srcCompat="@drawable/phara" />

            <ImageView
                android:id="@+id/reaperView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="reaper"
                app:srcCompat="@drawable/reaper" />

            <ImageView
                android:id="@+id/reinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="reinhardt"
                app:srcCompat="@drawable/reihardt" />

            <ImageView
                android:id="@+id/roadhogView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="roadhog"
                app:srcCompat="@drawable/roadhog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/soldierView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="soldier"
                app:srcCompat="@drawable/soldier" />

            <ImageView
                android:id="@+id/sombraView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="sombra"
                app:srcCompat="@drawable/sombra" />

            <ImageView
                android:id="@+id/symmetraView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="symmetra"
                app:srcCompat="@drawable/symmetra" />

            <ImageView
                android:id="@+id/torbView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="torbjorn"
                app:srcCompat="@drawable/torbjorn" />

            <ImageView
                android:id="@+id/tracerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="tracer"
                app:srcCompat="@drawable/tracer" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/widowView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="widowmaker"
                app:srcCompat="@drawable/widowmaker" />

            <ImageView
                android:id="@+id/winstonView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="winston"
                app:srcCompat="@drawable/winston" />

            <ImageView
                android:id="@+id/zaryaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="zarya"
                app:srcCompat="@drawable/zarya" />

            <ImageView
                android:id="@+id/zenyattaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="playSound"
                android:tag="zenyatta"
                app:srcCompat="@drawable/zenyatta" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_sml" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
